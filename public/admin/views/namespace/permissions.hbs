<ul class="list-group">
    <li class="list-group-item text-center" style="padding: 0px;">
        <h4 style="display: inline-block;">Users allowed to operate this namespace</h4>
        <span id="addPermission-namespace" class="btn btn-link glyphicon glyphicon-plus pull-right" style="text-decoration: inherit;"></span>
    </li>
    {{#each permissions}}
        <li data-username="{{username}}" class="list-group-item">
            {{username}}
            <span class="btn btn-link glyphicon glyphicon-remove pull-right remove-permission" style="text-decoration: inherit; padding: 0px;"></span>
        </li>
    {{/each}}
</ul>