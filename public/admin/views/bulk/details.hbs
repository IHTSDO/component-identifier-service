<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Id:</label>
        <div class="col-md-10">
            <input value="{{job.id}}" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Name:</label>
        <div class="col-md-10">
            <input value="{{job.name}}" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Status:</label>
        <div class="col-md-10">
            <input value="{{convertStatus job.status}}" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Log:</label>
        <div class="col-md-10">
            <input value="{{job.log}}" disabled type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Request Time:</label>
        <div class="col-md-10">
            <input value="{{time job.created_at}}" disabled type="text" class="form-control">
        </div>
    </div>
    <h4 class="text-center">Request data</h4>
    {{#each job.request}}
        <div class="form-group">
            <label class="control-label col-md-2">{{@key}}:</label>
            <div class="col-md-10">
                <input value="{{this}}" disabled type="text" class="form-control">
            </div>
        </div>
    {{/each}}
    <h4 class="text-center">Records</h4>
    <table class="table table-bordered table-hover" id="records-details-bulk-job"></table>
    <div class="text-center">
        <button id="records-get-button-bulk" type="button" class="btn btn-primary">Get records</button>
    </div>
</form>