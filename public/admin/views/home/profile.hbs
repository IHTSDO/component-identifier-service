<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">User</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="{{user.username}}" disabled="">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="{{user.email}}" disabled="">
        </div>
    </div>
    <div style="display: none" id="change-password-content">
        <div class="form-group">
            <label for="actual-password" class="col-sm-2 control-label">Actual Password</label>
            <div class="col-sm-10">
                <input id="actual-password" type="password" class="form-control" value="">
            </div>
        </div>
        <div class="form-group">
            <label for="new-password" class="col-sm-2 control-label">New Password</label>
            <div class="col-sm-10">
                <input id="new-password" type="password" class="form-control" value="">
            </div>
        </div>
        <div class="form-group">
            <label  for="confirm-password" class="col-sm-2 control-label">Confirm Password</label>
            <div class="col-sm-10">
                <input id="confirm-password" type="password" class="form-control" value="">
            </div>
        </div>
    </div>
    <div style="margin-left: 15px;" class="form-group">
        <!--<button id="change-password-btn" type="button" class="btn btn-primary ladda-button" data-style="zoom-in">Change password</button>-->
        <button id="change-password-cancel" style="display: none;" type="button" class="btn btn-danger">Cancel</button>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Jira User</label>
        <div class="col-sm-10">
            <input id="jira-user" type="text" class="form-control" value="{{user.jira.username}}" disabled="">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Jira Password</label>
        <div class="col-sm-10">
            <input id="jira-password" type="password" class="form-control" value="{{user.jira.password}}" disabled="">
        </div>
    </div>
    <div style="margin-left: 15px;" class="form-group">
        <!--<button id="change-jira-btn" type="button" class="btn btn-primary ladda-button" data-style="zoom-in">Change jira options</button>-->
        <button id="change-jira-cancel" style="display: none;" type="button" class="btn btn-danger">Cancel</button>
    </div>
</form>